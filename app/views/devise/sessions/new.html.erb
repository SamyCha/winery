<div class="background-image">
<div class="container">
<div class="row">
  <div class='col-md-4 col-md-offset-4'>
    <h2 class='text-center'>Log in</h2>

    <br/>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <br>
    <div class="form-group">
      <%= f.input :email, required: false, autofocus: true, placeholder: 'johnn@gmail.com', class:'form-control' %>
</div>
  <div class="form-group">
      <%= f.input :password, required: false, placeholder: 'Wskn@23', class:'form-control' %>
    </div>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= link_to 'Forgot password', new_user_password_path %>
    <br><br>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class:'btn btn-normal btn-block' %>
    </div>
    <% end %>
     <hr/>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>
  </div>
</div>
</div>
</div>
