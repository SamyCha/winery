<div class="background-image">
  <div class="row">
    <div class="col-xs-1 col-md-1"></div>
    <div class="col-xs-10 col-md-5 banner">
      <span class="text-white2"><strong>Wine House</strong></span><br><span class="text-white"><strong>Discover the online largest selection of wines around you...</strong></span>
    </div>
    <div class="col-xs-1 col-md-6"></div>
  </div>
  <%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "A bottle for where?", class: "form-control", id: "autolocation" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "For when?", class: "form-control datepicker" %>
    </div>

    <div class="col-md-1"></div>
  </div>
  <br/><br/>
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= submit_tag "Search a wine around me", class: "btn btn-normal btn-block" %><br>
    </div>
  </div>
  <div class="row">
   <div class="col-md-2"></div>
   <div class="col-md-8 text-center">
   <%= link_to become_host_path do %><br><br>
    <span class="text-white"><strong>Subscribe newsletter</strong></span><% end %>
  </div>
  <div class="col-md-2">
   <%= image_tag "instagram.png", height: 48 %>
 </div>
</div>

<% end %>
</div>

  <script>
    $('#start_date').datepicker({
      dateFormat: 'dd-mm-yy',
      minDate: 0,
      maxDate: '3m',
      onSelect: function(selected) {
        $('#end_date').datepicker("option", "minDate", selected);
        $('#end_date').attr("disabled", false);
      }
    });

    $('#end_date').datepicker({
      dateFormat: 'dd-mm-yy',
      minDate: 0,
      maxDate: '3m',
      onSelect: function(selected) {
        $('#start_date').datepicker("option", "maxDate", selected);
      }
    });

    $(function() {
      $("#autolocation").geocomplete();
    })
  </script>
</div>

