<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Description
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

            <div class="row">
              <div class="form-group">
                <label>Select Type</label>
              <%= f.select :Typology, [["Chateau", "Chateau"], ["Domaine", "Domaine"], ["Clos", "Clos"]], prompt: "Select...", class: "form-control" %>
              </div>
            </div>


            <div class="row">
              <div class="form-group">
                <label>Bottle Name</label>
                <%= f.text_field :listing_name, placeholder: "Chateau Yquem...", class: "form-control", required: true %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>Description/Rating</label>
                <%= f.text_area :summary, rows: 5, placeholder: "Rating of your wine... (from an API)", class: "form-control", required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "Save", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
